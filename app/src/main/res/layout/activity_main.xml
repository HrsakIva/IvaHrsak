<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.math.kolokvij.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/urlSlike"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
    <Button
        android:id="@+id/btnSlika"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:onClick="downloadSlike"
    />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnIspisBaze"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ispis Baze"
        android:onClick="ispisBaze"
    />

    <TextView
        android:id="@+id/sadrzajB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <Button
        android:id="@+id/btnIspisPicasso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pablo Picasso"
        android:onClick="ispisPicasso"
    />

    <TextView
        android:id="@+id/sadrzajPicasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <EditText
        android:id="@+id/izbrisiS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/btnIzbrisiSliku"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Izbrisi sliku"
        android:onClick="izbrisiSliku"
    />

    <EditText
        android:id="@+id/izbrisiP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/btnIzbrisiPeriod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Izbrisi period"
        android:onClick="izbrisiPeriod"
    />


</LinearLayout>
